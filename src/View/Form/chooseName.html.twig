{% extends 'layout.html.twig' %}

{% block title %}
	Mes formulaires
{% endblock %}

{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/formstyle.css">
{% endblock %}

{% block content %}
	<main>
		<h1>Choisissez un nom pour votre questionnaire</h1>
		{% if errors %}
			<ul>
				{% for error in errors %}
					<li>{{error}}</li>
				{% endfor %}
			</ul>
		{% endif %}
		<form method='post'>
			<input
			type='text' name='formName' id='formName'>
			<!-- add required minLength and maxLength after do verification in FormController -->
			<div class="info" id='formInfo'>
				Il reste 256 caractères.
			</div>
			<button class='button' action='send'>Créer le questionnaire</button>
		</form>
	</main>
{% endblock %}
{% block javascript %}
	<script src='assets/js/formCreateName.js'></script>
{% endblock %}
